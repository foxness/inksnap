        <View style="@style/divider"/>

        <RelativeLayout
            android:id="@+id/imgur_account_setting"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="22dp"
                android:text="@string/imgur_account"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="16sp" />

            <Button
                android:id="@+id/imgur_toggle"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="22dp"
                android:text="@string/log_out" />

        </RelativeLayout>

        <View
            android:id="@+id/imgur_account_setting_divider"
            style="@style/divider"
            />

        <RelativeLayout
            android:id="@+id/wallpaper_mode_setting"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="22dp"
                android:text="@string/wallpaper_mode"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/wallpaper_mode_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="22dp"
                />

        </RelativeLayout>

        <View
            android:id="@+id/wallpaper_mode_setting_divider"
            style="@style/divider"
            />

        <RelativeLayout
            android:id="@+id/autosubmit_type_setting"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            >

            <Button
                android:id="@+id/autosubmit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="22dp"
                android:text="@string/autosubmit_type"
                />

        </RelativeLayout>

        <View
            android:id="@+id/autosubmit_type_setting_divider"
            style="@style/divider"
            />

        <RelativeLayout
            android:id="@+id/timer_period_setting"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            >

            <Button
                android:id="@+id/timer_period_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="22dp"
                android:text="@string/timer_period"
                />

        </RelativeLayout>

        <View
            android:id="@+id/timer_period_setting_divider"
            style="@style/divider"
            />

    </LinearLayout>

</ScrollView>