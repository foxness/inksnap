<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
        <TextView
            android:id="@+id/explanation_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/explanation"
            android:textSize="12sp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            />

        <View
            android:id="@+id/explanation_divider"
            style="@style/divider"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            >
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reddit_account"
                    android:textColor="@android:color/primary_text_dark"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/reddit_account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="/u/randomName"
                    android:textColor="#999"
                    android:textSize="14sp"
                    />
                
            </LinearLayout>

            <Button
                android:id="@+id/reddit_toggle"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                tools:text="@string/log_out"
                />

        </LinearLayout>
        
