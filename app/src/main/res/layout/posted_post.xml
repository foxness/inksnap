<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    >
    
    <ImageView
        android:id="@+id/posted_post_post_thumbnail"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="22dp"
        android:contentDescription="@string/post_thumbnail"
        android:src="@drawable/self_thumb"
        android:scaleType="fitCenter"
        />
    
    <RelativeLayout
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/posted_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp"
            tools:text="Post title"
            />

        <TextView
            android:id="@+id/posted_post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/posted_post_title"
            android:layout_marginStart="22dp"
            android:layout_marginTop="8dp"
            tools:text="Post content"
            />

        <TextView
            android:id="@+id/posted_post_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/posted_post_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="8dp"
            tools:text="x seconds ago"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/posted_post_subreddit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        tools:text="Post subreddit"
        android:layout_gravity="center_vertical"
        />
    
</LinearLayout>